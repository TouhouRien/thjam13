import "map.gr"

export func addSolid(scene: Scene, worldPos: Vec2i, hitbox: Vec2i, tileId: int)(Solid) {
    var solid = @Solid;
    solid.position = worldPos;
    solid.hitbox = hitbox;
    solid.addTag(tileId as<TileName> as<string>);
    scene.addSolid(solid);

    return solid;
}

