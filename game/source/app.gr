import "level.gr"
import "menu.gr"

event app {
    @App.setScaling(Scaling.fit);
    @App.setPixelSharpness(2);
    debug();
    menu();
}

task debug() {
    loop yield {
        if(@Input.isDown(KeyButton.f5))
            @App.reload(true, true);

        if(@Input.isDown(KeyButton.escape))
            @App.close();
    }
}